{
  "name": "shoemaker",
  "version": "0.1.4",
  "description": "A CLI that makes thumbnails from images, RAW files, and videos",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "shoemaker": "dist/bin/shoemaker.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "presets"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/bin/shoemaker.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:download-fixtures": "tsx scripts/download-test-fixtures.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "thumbnail",
    "image",
    "raw",
    "video",
    "ffmpeg",
    "exif",
    "xmp",
    "sharp",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "exiftool-vendored": "^28.3.0",
    "ora": "^8.1.1",
    "p-queue": "^8.0.1",
    "sharp": "^0.33.5",
    "smol-toml": "^1.3.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.1",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
